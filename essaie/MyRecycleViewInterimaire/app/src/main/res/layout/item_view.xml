<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="20dp"
    android:layout_marginStart="20dp"
    android:layout_marginTop="30dp"
    android:background="@drawable/bord_bleu_fond_white"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent">

    <LinearLayout
        android:id="@+id/toolbar_offre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/arrondir_toolbar_haut_bleu"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/titre_offre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="28dp"
            android:text="Titre"
            android:textColor="@color/white"/>


        <ImageView
            android:id="@+id/btn_heart"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_gravity="end"
            android:src="@drawable/icon_favori_white_vide"
            android:contentDescription="TODO" />

    </LinearLayout>
    <TextView
        android:id="@+id/entrepriseOffre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/toolbar_offre"
        android:text="YouTube"
        android:textSize="23dp"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/image_entreprise"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/entrepriseOffre"
        android:src="@drawable/youtube"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:contentDescription="TODO" />

    <TextView
        android:id="@+id/descriptionOffre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@id/image_entreprise"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:text="petite description"
        android:textSize="16dp"
        android:gravity="center"/>


    <LinearLayout
        android:id="@+id/layout_offre_adresse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_below="@id/descriptionOffre"
        android:orientation="horizontal"
        android:background="@drawable/bord_bleu_fond_white">

        <LinearLayout
            android:id="@+id/layout_image"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginStart="20dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_candidature"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/icon_localisation_bleu"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_adresse"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/adresseOffre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="9 rue grand-père"
                android:textSize="16dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/complementOffre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Résidence Prout"
                android:textSize="16dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/codeOffre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="18090 Chocolat"
                android:textSize="16dp"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_parking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_offre_adresse"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/image_parking"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_parking_black"/>
        <TextView
            android:id="@+id/parking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="104 places"
            android:textSize="16dp"
            android:gravity="center"
            android:paddingStart="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_ticket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/layout_parking"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/image_ticket"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_ticket_black"/>
        <TextView
            android:id="@+id/ticket_resto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ticket restaurant"
            android:textSize="16dp"
            android:gravity="center"
            android:paddingStart="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_teletravail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_ticket"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/image_teletravail"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_teletravail_black"/>
        <TextView
            android:id="@+id/teletravail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Télétravail"
            android:textSize="18dp"
            android:gravity="center"
            android:paddingLeft="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_bouton_candidature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/layout_teletravail"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/boutton_candidature"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="80dp"
            android:layout_marginStart="80dp"
            android:textColor="@color/white"
            android:background="@drawable/arrondir_edit_bleu"
            android:text="@string/boutton_candidature"
            android:textSize="15sp" />
    </LinearLayout>

</RelativeLayout>