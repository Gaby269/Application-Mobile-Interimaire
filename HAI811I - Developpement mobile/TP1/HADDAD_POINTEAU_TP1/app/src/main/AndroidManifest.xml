<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        tools:targetApi="31">

        <!-- Listes des activités -->

        <!-- Saisie de données -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Home">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>

        <!-- Saisie de données -->
        <activity
            android:name=".SaisieActivity"
            android:exported="true"
            android:theme="@style/Theme.Saisie">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>

        <!-- Affichage des données -->
        <activity
            android:name=".AffichageActivity"
            android:exported="true"
            android:theme="@style/Theme.Saisie">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>

        <!-- Affichage pour appeler -->
        <activity
            android:name=".AppelActivity"
            android:exported="true"
            android:theme="@style/Theme.Saisie">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>

        <!-- Recherche de train -->
        <activity
            android:name=".TrainActivity"
            android:exported="true"
            android:theme="@style/Theme.Train">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>

        <!-- Calendrier -->
        <activity
            android:name=".CalendrierActivity"
            android:exported="true"
            android:theme="@style/Theme.Calendrier">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
    </application>

</manifest>