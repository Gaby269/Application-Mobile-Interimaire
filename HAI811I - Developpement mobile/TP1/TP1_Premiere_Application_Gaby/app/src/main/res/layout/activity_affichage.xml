<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AffichageActivity">

    <Button
        android:id="@+id/bouton_langage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/langage"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.93"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.068" />

    <TextView
        android:id="@+id/textDébutAffichage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/infoAff"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.197" />


    <TextView
        android:id="@+id/prenom_aff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="508dp"
        android:text="@string/prenom"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/prenom_affichage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textDébutAffichage"
        app:layout_constraintVertical_bias="1.200"/>

    <TextView
        android:id="@+id/prenom_affichage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="508dp"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textDébutAffichage"
        app:layout_constraintStart_toEndOf="@+id/prenom_aff"
        app:layout_constraintVertical_bias="1.200"
        app:layout_constraintHorizontal_bias="0.800"/>



    <TextView
        android:id="@+id/nom_aff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nom"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@id/nom_affichage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/prenom_aff"
        app:layout_constraintStart_toEndOf="@+id/nom_affichage"
        app:layout_constraintVertical_bias="0.050"/>

    <TextView
        android:id="@+id/nom_affichage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/prenom_affichage"
        app:layout_constraintStart_toEndOf="@+id/prenom_aff"
        app:layout_constraintVertical_bias="0.050"
        app:layout_constraintHorizontal_bias="0.800" />


    <TextView
        android:id="@+id/age_aff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/age"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@id/age_affichage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nom_aff"
        app:layout_constraintStart_toEndOf="@+id/age_affichage"
        app:layout_constraintVertical_bias="0.050"/>

    <TextView
        android:id="@+id/age_affichage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nom_affichage"
        app:layout_constraintStart_toEndOf="@+id/prenom_aff"
        app:layout_constraintVertical_bias="0.050"
        app:layout_constraintHorizontal_bias="0.800"/>


    <TextView
        android:id="@+id/comp_aff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/competence"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@id/comp_affichage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/age_aff"
        app:layout_constraintVertical_bias="0.050" />

    <TextView
        android:id="@+id/comp_affichage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/age_affichage"
        app:layout_constraintStart_toEndOf="@+id/comp_aff"
        app:layout_constraintVertical_bias="0.050"
        app:layout_constraintHorizontal_bias="0.800" />

    <TextView
        android:id="@+id/tel_aff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/numTel"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/comp_aff"
        app:layout_constraintEnd_toStartOf="@+id/tel_affichage"
        app:layout_constraintVertical_bias="0.050" />


    <TextView
        android:id="@+id/tel_affichage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/comp_affichage"
        app:layout_constraintStart_toEndOf="@+id/tel_aff"
        app:layout_constraintVertical_bias="0.050"
        app:layout_constraintHorizontal_bias="0.800"/>


    <Button
        android:id="@+id/ok_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/retour_bouton"
        app:layout_constraintTop_toBottomOf="@+id/tel_affichage"
        app:layout_constraintTop_toTopOf="@+id/retour_bouton"
        app:layout_constraintHorizontal_bias="0.321" />

    <Button
        android:id="@+id/retour_bouton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:text="@string/retour"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tel_affichage"
        app:layout_constraintVertical_bias="0.501"
        app:layout_constraintHorizontal_bias="0.283" />




</androidx.constraintlayout.widget.ConstraintLayout>